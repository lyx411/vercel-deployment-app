{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:minimal"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/index.js" },
    { "src": "/(.*)", "dest": "dist/public/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}