{
  "rewrites": [
    { "source": "/api/(.*)", "dest": "/api/serverless/$1" },
    { "source": "/(.*)", "dest": "/" }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/public",
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 5 * * *"
    }
  ],
  "functions": {
    "api/serverless/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}