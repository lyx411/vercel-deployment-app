{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "client/**", "server/**", "shared/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/vercel-bridge.js" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}