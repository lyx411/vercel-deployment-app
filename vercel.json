{
  "version": 2,
  "buildCommand": "npm run build:minimal",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/index.js" },
    { "source": "/(.*)", "destination": "/public/$1" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ]
}