{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/vercel-bridge.js" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/vercel-bridge.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}